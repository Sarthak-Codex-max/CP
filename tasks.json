{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "g++-15",
            "args": [
                "run",
                "--rm",
                "-v", "${workspaceFolder}:/code",
                "-w", "/code",
                "gcc:latest",
                "g++",
                "-std=c++17",
                "-O2",
                "-Wall",
                "-Wextra",
                "-Wshadow",
                "-Wconversion",
                "-fsanitize=address",
                "${file}",
                "-o",
                "${fileBasenameNoExtension}",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "compile and run",
            "type": "shell",
            "command": "g++-15",
            "args": [
                "-std=c++17",
                "-mmacosx-version-min=26.0",
                "-Wall",
                "-Wextra",
                "-o",
                "${fileBasenameNoExtension}",
                "${file}",
                "&&",
                "gtimeout",
                "5s",
                "./${fileBasenameNoExtension}",
                "<",
                "input.txt",
                ">",
                "output.txt"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "java (buildArtifact)",
            "targetPath": "${workspaceFolder}/${workspaceFolderBasename}.jar",
            "elements": [
                "${compileOutput}",
                "${dependencies}"
            ],
            "problemMatcher": [],
            "label": "java (buildArtifact): coding"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++-15 build active file",
            "command": "/opt/homebrew/bin/g++-15",
            "args": [
                "-fdiagnostics-color=always",
                "-mmacosx-version-min=26.0",
                "-g",
                "-O0",
                "-Wall",
                "-Wextra",
                "-fsanitize=address,undefined",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /opt/homebrew/bin/g++-15"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++-15 build active file with C++17",
            "command": "/opt/homebrew/bin/g++-15",
            "args": [
                "-fdiagnostics-color=always",
                "-mmacosx-version-min=26.0",
                "-g",
                "-std=c++17",
                "-Wall",
                "-Wextra",
                "-I/usr/include/c++/14",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /opt/homebrew/bin/g++-15"
        }
    ]
}
